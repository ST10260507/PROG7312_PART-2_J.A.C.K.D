<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="517dp"
        android:layout_height="1255dp"
        app:srcCompat="@drawable/blue_bg"
        tools:layout_editor_absoluteX="-17dp"
        tools:layout_editor_absoluteY="-232dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Register"
        android:layout_width="282dp"
        android:layout_height="97dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="REGISTER"
        android:textColor="@color/black"
        android:textSize="75sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="75dp" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="EMAIL:"
        android:textColor="@color/black"
        android:textSize="32sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="198dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/txtBoxEmail"
        android:layout_width="269dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/Email"
        app:srcCompat="@drawable/text_box"
        tools:layout_editor_absoluteX="70dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/EmailInput"
        android:layout_width="250dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:hint="ENTER EMAIL"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Email" />

    <TextView
        android:id="@+id/Password"
        android:layout_width="268dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="CREATE PASSWORD:"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/txtBoxEmail"
        tools:layout_editor_absoluteX="75dp" />

    <ImageView
        android:id="@+id/txtBoxPassword"
        android:layout_width="269dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/Password"
        app:srcCompat="@drawable/text_box"
        tools:layout_editor_absoluteX="71dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/CreatePassInput"
        android:layout_width="247dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:hint="ENTER PASSWORD"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Password" />

    <TextView
        android:id="@+id/ConfirmPass"
        android:layout_width="284dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="CONFIRM PASSWORD:"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@id/txtBoxPassword"
        tools:layout_editor_absoluteX="70dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/txtBoxConfirmPass"
        android:layout_width="269dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/ConfirmPass"
        app:srcCompat="@drawable/text_box"
        tools:layout_editor_absoluteX="74dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ConfirmPassInput"
        android:layout_width="250dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:hint="CONFIRM PASSWORD"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ConfirmPass" />

    <Button
        android:id="@+id/RegBtn"
        android:layout_width="138dp"
        android:layout_height="62dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="REGISTER"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:backgroundTint="@color/teal"
        app:layout_constraintTop_toBottomOf="@id/ConfirmPassInput"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="137dp" />

    <TextView
        android:id="@+id/Login"
        android:layout_width="337dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="ALREADY HAVE AN ACCOUNT?"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/RegBtn"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/Loginbtn"
        android:layout_width="141dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="LOGIN HERE"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:backgroundTint="@color/pastelRed"
        app:layout_constraintTop_toBottomOf="@id/Login"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="139dp" />

</androidx.constraintlayout.widget.ConstraintLayout>