<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".ResetPasswordActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="517dp"
        android:layout_height="1255dp"
        app:srcCompat="@drawable/blue_bg"
        tools:layout_editor_absoluteX="-17dp"
        tools:layout_editor_absoluteY="-232dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/LoginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="RESET PASSWORD"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="55sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="75dp" />


    <ImageView
        android:id="@+id/txtBoxEmail"
        android:layout_width="269dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/text_box"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="366dp" />

    <TextView
        android:id="@+id/RestPWtext"
        android:layout_width="337dp"
        android:layout_height="55dp"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="PLEASE ENTER YOUR EMAIL TO RESET PASSWORD."
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="295dp" />

    <EditText
        android:id="@+id/CreatePassInput"
        android:layout_width="247dp"
        android:layout_height="47dp"
        android:hint="ENTER PASSWORD"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="362dp" />

    <Button
        android:id="@+id/RegBtn"
        android:layout_width="138dp"
        android:layout_height="62dp"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="RESET PASSWORD"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:backgroundTint="@color/teal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="428dp" />

    <TextView
        android:id="@+id/Login"
        android:layout_width="337dp"
        android:layout_height="55dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="DON'T HAVE AN ACCOUNT YET? LOGIN HERE."
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/RegBtn"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/Loginbtn"
        android:layout_width="141dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/pastelRed"
        android:fontFamily="@font/tantangkiwood_display"
        android:text="LOGIN HERE"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="661dp" />

</androidx.constraintlayout.widget.ConstraintLayout>